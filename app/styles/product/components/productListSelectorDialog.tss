'#list_view_container': {
    top: 0,
    height: 270
},

'#title_container': {
    top: 0,
    height: 60,
    width: 320,
    backgroundColor: Alloy.Styles.color.background.white,
    layout: 'vertical'
},

'.list_title_container': {
    height: 50,
    backgroundColor: 'white',
    selectedBackgroundColor: Alloy.Styles.color.background.white,
    backgroundSelectedColor: Alloy.Styles.color.background.white
},

'#controls_wrapper': {
    top: 15,
    layout: 'horizontal',
    height: Ti.UI.SIZE,
    width: Ti.UI.SIZE,
    bottom: 15
