// TSS file for build info in admin dashboard

'#build_info_main': {
    layout: 'horizontal',
    width: '100%',
    height: '100%'
},

'#data_column': {
    layout: 'vertical',
    width: '70%',
    height: '100%'
},

'#action_column': {
    layout: 'vertical',
    width: '28%',
    height: '100%'
},

'#vertical_border': {
    width: 2,
    height: Ti.UI.FILL,
    backgroundColor: Alloy.Styles.color.border.darkest
},

'.section_class': {
    top: 15,
    left: 20,
    height: Ti.UI.SIZE,
