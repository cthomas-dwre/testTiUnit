},

'.title_class': {
    font: Alloy.Styles.detailLabelFont,
    color: Alloy.Styles.accentColor,
    left: 0,
    bottom: 10
},

'.text_class': {
    font: Alloy.Styles.detailValueFont,
    left: 0
},

'#action_title': {
    textid: '_Actions_'
},

'#cache_text': {
    textid: '_CacheText'
},

'#clear_cache': {
    titleid: '_Clear_Cache'
},

'#password_text': {
    textid: '_ChangeStorePasswordText',
    top: 20
},

'#change_store_password': {
    titleid: '_Change_Store_Password_Menu'
},

