// TSS file for customer popover from header

'#popover_window': {
    backgroundColor: Alloy.Styles.color.background.transparent
},

'#backdrop': {
    top: 0,
    left: 0,
    width: 1024,
    height: 768,
    opacity: 0.25,
    backgroundColor: Alloy.Styles.color.background.black
},

'#popover_container': {
    layout: 'vertical',
    height: 140,
    width: 250,
    backgroundColor: Alloy.Styles.color.background.white,
    left: 525,
    top: 75,
    borderWidth: 2,
    borderColor: Alloy.Styles.color.border.lightest
},

'#profile_button': {
    backgroundImage: Alloy.Styles.secondaryButtonImage,
    width: '90%',
    height: 50,
    top: 10
},

'#logout_button': {
    backgroundImage: Alloy.Styles.primaryButtonImage,
    color: Alloy.Styles.buttons.primary.color,
    width: '90%',
    height: 50,
    top: 10
}
