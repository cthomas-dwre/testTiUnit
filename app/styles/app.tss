// TSS file for application styles

/* width classes */

'Window': {
    tabBarHidden: 1,
    navBarHidden: 1,
    backgroundColor: Alloy.Styles.color.background.white,
    statusBarStyle: Ti.UI.iOS.StatusBar.LIGHT_CONTENT
},

'#contents': {
    backgroundColor: Alloy.Styles.color.background.white
},

'Label': {
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE,
    color: Alloy.Styles.color.text.darkest,
    textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT
},

'.form_field': {
    height: 30
},

'.form_fields': {
    layout: 'horizontal'
},

'.height_zero': {
    height: 0,
    visible: false
},

'.block_header': {
    font: Alloy.Styles.calloutFont
},

/**
*  TSS Related to Required Fields
*/
'.required_star': {
    color: Alloy.Styles.color.text.red,
    font: Alloy.Styles.smallerAccentFont
},

'.required_field_label': {
    font: Alloy.Styles.smallerAccentFont
},

'.required_field_label_container': {
    layout: 'horizontal',
    height: Ti.UI.SIZE
},

'.tab_button': {
    width: 207,
    height: 49,
    color: Alloy.Styles.color.text.dark,
    font: Alloy.Styles.buttonFont,
    style: Ti.UI.iOS.SystemButtonStyle.PLAIN,
    backgroundColor: Alloy.Styles.tabs.backgroundColorDisabled
},

'.primary_button': {
    textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
    color: Alloy.Styles.buttons.primary.color,
    disabledColor: Alloy.Styles.buttons.primary.disabledColor,
    backgroundImage: Alloy.Styles.buttons.primary.backgroundImage,
    backgroundDisabledImage: Alloy.Styles.buttons.primary.backgroundDisabledImage,
    height: 40,
    width: 200
},

'.secondary_button': {
    textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
    backgroundImage: Alloy.Styles.buttons.secondary.backgroundImage,
    backgroundDisabledImage: Alloy.Styles.buttons.secondary.backgroundDisabledImage,
    color: Alloy.Styles.buttons.secondary.color,
    disabledColor: Alloy.Styles.buttons.secondary.disabledColor,
    height: 40,
    width: 200
},

'.horizontal_separator': {
    width: '100%',
    backgroundColor: Alloy.Styles.color.background.dark,
    height: 1,
    left: 0,
    top: 10
},

'.vertical_separator': {
    width: 1,
    backgroundColor: Alloy.Styles.color.background.dark,
    height: '100%',
    top: 0
},

'.admin_action_button': {
    font: Alloy.Styles.smallButtonFont,
    width: Ti.UI.FILL,
    height: 30,
    top: 10,
    bottom: 20
},

