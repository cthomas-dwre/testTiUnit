<Alloy>
    <View id="set_product">
        <View id="horizontal_container">
            <ImageView id="product_image" accessibilityValue="product_image"/>
            <View id="vertical_container">
                <Label id="name" accessibilityValue="set_item_name"/>
                <Require id="product_id" src="product/components/productId"/>
                <Require id="pricing" src="product/components/productPricing"/>
                <Require id="promotions" src="product/components/promotions"/>
                <Require id="variations" src="product/components/variations"/>
                <Require id="options" src="product/components/options"/>
                <Require id="cart_add" src="product/components/cartAdd"/>
            </View>
        </View>
        <View class="horizontal_separator"/>
    </View>
</Alloy>