<Alloy>
    <View id="store_password_window">
        <View id="backdrop"/>
        <View id="manager" class="contents">
            <Require id="manager_view" src="associate/authorization" type="view"/>
        </View>
        <View id="store_password" class="contents">
            <Label id="store_password_title" class="side_spacing title" accessibilityValue="store_password_title"/>
            <Label id="store_subtitle" class="side_spacing subtitle" accessibilityValue="store_username"/>
            <Label id="store_password_error_label" class="side_spacing error_label" accessibilityValue="store_password_error_label"/>
            <ScrollView id="scroll_fields">
                <TextField id="current_password" class="side_spacing textfield" accessibilityLabel="current_store_password"/>
                <TextField id="password" class="side_spacing textfield" accessibilityLabel="new_store_password"/>
                <TextField id="password_verify" class="side_spacing textfield" accessibilityLabel="new_store_password_verify"/>
            </ScrollView>
            <View id="button_view">
                <Button id="store_password_cancel_button" class="button secondary_button" accessibilityValue="store_password_cancel_button"/>
                <Button id="change_store_password_button" class="button primary_button" accessibilityValue="change_store_password_button"/>
            </View>
        </View>
    </View>
</Alloy>
